.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.loading-logo {
    margin-top: 20rpx;
    width: 80rpx;
    height: 80rpx;
}

.loading-text {
    font-size: 36rpx;
    margin-top: 20rpx;
}

.loading-spinner {
    margin-top: 10rpx;
    width: 150rpx;
    text-align: center;
}

.loading-spinner > view {
    width: 20rpx;
    height: 20rpx;
    background-color: #999;
    border-radius: 100%;
    display: inline-block;
    animation: bouncedelay 1.4s infinite ease-in-out;
    animation-fill-mode: both;
    margin: 0 5rpx;
}

.loading-spinner .bounce1 {
    animation-delay: -0.64s;
}

.loading-spinner .bounce2 {
    animation-delay: -0.32s;
}

@keyframes bouncedelay {
    0%, 80%, 100% {
        transform: scale(0.3);
        opacity: 0;
    }

    40% {
        transform: scale(1.0);
        opacity: 0.5;
    }
}
